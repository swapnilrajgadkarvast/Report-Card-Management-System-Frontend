                            <div>
                              <FontAwesomeIcon
                                icon={faUserGraduate}
                                className="text-purple-900 mr-2"
                              />
                              <strong>{student.studentName}</strong>
                              &nbsp;&nbsp; {/* Add space */}
                              Roll No : <strong>{student.rollNo}</strong>
                            </div>
                            <div className="mt-4">
                              <table className="w-full">
                                <thead>
                                  <tr>
                                    <th>Subject</th>
                                    <th>Marks</th>
                                  </tr>
                                </thead>
                                <tbody>
